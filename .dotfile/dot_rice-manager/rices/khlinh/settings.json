{
  "windowsTheme": "dark",
  "windowsTerminalTheme": "Nord",
  "windowsTerminalFont": {
    "cellHeight": "1.2",
    "face": "JetBrainsMono NF",
    "size": 12
  },
  "komorebiConfig": {
    "borderColours": {
      "single": "#88c0d0",
      "stack": "#b48ead",
      "monocle": "#a3be8c",
      "unfocused": "#4c566a",
      "floating": "#ebcb8b"
    },
    "borderWidth": 2,
    "borderStyle": "Rounded",
    "workspacePadding": 8,
    "containerPadding": 8,
    "workAreaOffset": { "top": 0, "bottom": 0, "left": 0, "right": 0 }
  }
}
